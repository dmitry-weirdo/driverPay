<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="4.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magenta.echo.driverpay.ui.screen.PaymentDocumentBrowser">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="4.0">
         <children>
            <DatePicker fx:id="dateFrom" prefWidth="100.0" promptText="Date From" />
            <DatePicker fx:id="dateTo" prefWidth="100.0" promptText="Date To" />
            <Button fx:id="driver" mnemonicParsing="false" onAction="#handleSelectDriver" text="Select Driver..." />
            <CheckBox fx:id="processed" mnemonicParsing="false" text="Processed" />
            <Separator orientation="VERTICAL" />
            <Button mnemonicParsing="false" onAction="#handleClear" text="Clear" />
            <Button mnemonicParsing="false" onAction="#handleSearch" text="Search" />
         </children>
      </HBox>
      <TableView fx:id="table" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="idColumn" editable="false" minWidth="-1.0" text="Id" />
            <TableColumn fx:id="driverColumn" editable="false" minWidth="-1.0" text="Driver" />
            <TableColumn fx:id="paymentDateColumn" editable="false" minWidth="-1.0" text="Payment Date" />
            <TableColumn fx:id="statusColumn" editable="false" minWidth="-1.0" text="Processed" />
         </columns>
      </TableView>
      <BorderPane>
         <left>
            <Button mnemonicParsing="false" onAction="#handleHome" text="Home" BorderPane.alignment="CENTER" />
         </left>
         <right>
            <HBox spacing="4.0">
               <children>
                  <Button fx:id="viewButton" disable="true" mnemonicParsing="false" onAction="#handleView" text="View..." />
                  <Button fx:id="processButton" disable="true" mnemonicParsing="false" onAction="#handleProcess" text="Process..." BorderPane.alignment="CENTER" />
               </children>
            </HBox>
         </right>
      </BorderPane>
   </children>
   <padding>
      <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
   </padding>
</VBox>
