<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="4.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magenta.echo.driverpay.ui.screen.SalaryCalculation">
   <children>
      <HBox spacing="4.0" VBox.vgrow="NEVER">
         <children>
            <DatePicker fx:id="dateTo" prefWidth="100.0" promptText="Date To" />
            <DatePicker fx:id="dateFrom" prefWidth="100.0" promptText="Date From" />
            <Button fx:id="driver" mnemonicParsing="false" onAction="#handleSelectDriver" prefWidth="100.0" text="Select Driver..." />
            <ComboBox fx:id="type" prefWidth="100.0" promptText="Type" />
            <ComboBox fx:id="status" prefWidth="100.0" promptText="Status" />
            <Separator orientation="VERTICAL" />
            <Button mnemonicParsing="false" onAction="#handleClear" text="Clear" />
            <Button mnemonicParsing="false" onAction="#handleSearch" text="Search" />
         </children>
      </HBox>
      <TableView fx:id="table" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="idColumn" editable="false" minWidth="-1.0" text="Id" />
            <TableColumn fx:id="driverColumn" editable="false" minWidth="-1.0" text="Driver" />
            <TableColumn fx:id="typeColumn" editable="false" minWidth="-1.0" text="Type" />
            <TableColumn fx:id="statusColumn" editable="false" minWidth="-1.0" text="Status" />
            <TableColumn fx:id="dateColumn" editable="false" minWidth="-1.0" text="Date" />
            <TableColumn fx:id="netColumn" editable="false" minWidth="-1.0" text="Net" />
            <TableColumn fx:id="vatColumn" editable="false" minWidth="-1.0" text="Vat" />
            <TableColumn fx:id="totalColumn" editable="false" minWidth="-1.0" text="Total" />
         </columns>
      </TableView>
      <BorderPane>
         <left>
            <HBox spacing="4.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#handleHome" text="Home" BorderPane.alignment="CENTER" />
                  <Button mnemonicParsing="false" onAction="#handleOpenPayments" text="Payments" />
               </children>
            </HBox>
         </left>
         <right>
            <HBox spacing="4.0">
               <children>
                  <Button fx:id="makePaymentsButton" mnemonicParsing="false" onAction="#handleMakePayments" text="Make Payments..." />
               </children>
            </HBox>
         </right>
      </BorderPane>
   </children>
   <padding>
      <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
   </padding>
</VBox>
