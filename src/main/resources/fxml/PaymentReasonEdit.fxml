<?xml version="1.0" encoding="UTF-8"?>

<?import com.evgenltd.kwickui.controls.objectpicker.ObjectPicker?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox spacing="4.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.magenta.echo.driverpay.ui.screen.PaymentReasonEdit">
   <children>
      <Label text="PAYMENT REASON EDIT" VBox.vgrow="NEVER">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <GridPane hgap="4.0" vgap="4.0" VBox.vgrow="NEVER">
         <children>
            <Label text="Id" />
            <Label fx:id="idField" text="&lt;id&gt;" GridPane.columnIndex="1" />
            <Label text="Driver" GridPane.rowIndex="2" />
            <TextField fx:id="nameField" prefWidth="150.0" promptText="Name" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Type" GridPane.rowIndex="1" />
            <ComboBox fx:id="typeField" prefWidth="150.0" promptText="Payment Type" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Name" GridPane.rowIndex="3" />
            <ObjectPicker fx:id="driverField" prefWidth="150.0" promptText="Driver" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
         <columnConstraints>
            <ColumnConstraints hgrow="NEVER" />
            <ColumnConstraints hgrow="NEVER" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
            <RowConstraints vgrow="NEVER" />
         </rowConstraints>
      </GridPane>
      <VBox VBox.vgrow="ALWAYS">
         <children>
            <ToolBar VBox.vgrow="NEVER">
               <items>
                  <Button mnemonicParsing="false" onAction="#handleAddPayment" text="Add" />
                  <Button fx:id="editPaymentButton" disable="true" mnemonicParsing="false" onAction="#handleEditPayment" text="Edit" />
                  <Button fx:id="removePaymentButton" disable="true" mnemonicParsing="false" onAction="#handleRemovePayment" text="Remove" />
                  <Separator orientation="VERTICAL" />
                  <Button mnemonicParsing="false" onAction="#handleGeneratePaymentsByTemplate" text="Generate..." />
               </items>
            </ToolBar>
            <TableView fx:id="paymentTable" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="paymentIdColumn" editable="false" prefWidth="75.0" text="Id" />
                  <TableColumn fx:id="paymentPlannedDateColumn" editable="false" prefWidth="75.0" text="Planned Date" />
                  <TableColumn fx:id="paymentNetColumn" editable="false" prefWidth="75.0" text="Net" />
                  <TableColumn fx:id="paymentVatColumn" editable="false" prefWidth="75.0" text="Vat" />
                  <TableColumn fx:id="paymentTotalColumn" editable="false" prefWidth="75.0" text="Total" />
                  <TableColumn fx:id="paymentNominalCodeColumn" editable="false" prefWidth="75.0" text="Nominal Code" />
                  <TableColumn fx:id="paymentTaxCodeColumn" editable="false" prefWidth="75.0" text="Tax Code" />
                  <TableColumn fx:id="statusColumn" editable="false" prefWidth="75.0" text="Status" />
               </columns>
            </TableView>
            <HBox fx:id="totalsPane" alignment="CENTER_LEFT" VBox.vgrow="NEVER" />
         </children>
      </VBox>
      <BorderPane VBox.vgrow="NEVER">
         <right>
            <HBox spacing="4.0" BorderPane.alignment="CENTER">
               <children>
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#handleApply" text="Apply" />
                  <Button cancelButton="true" mnemonicParsing="false" onAction="#handleClose" text="Close" />
               </children>
            </HBox>
         </right>
      </BorderPane>
   </children>
   <padding>
      <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
   </padding>
</VBox>
